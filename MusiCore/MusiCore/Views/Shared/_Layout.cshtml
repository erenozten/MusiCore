                }
            }
            &nbsp;
            @ViewBag.bagForUserId
            &nbsp;
        </div>
    </div>

    <div class="i-color-black i-text-align-right i-font-weight-bold i-display-table-cell i-vertical-align" style="display: table-cell; vertical-align: middle; transform: translate(70%, 1%); -ms-transform: translate(70%, 1%)">
        @*@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()*@
        @*@if (ViewContext.RouteData.Values["controller"].ToString() == null)
        {
        }
        else
        {
            @ViewContext.RouteData.Values["controller"].ToString()
        }*@

        @try
        {
            @ViewContext.RouteData.Values["controller"].ToString()
            @*@:/ &nbsp*@
            @:/
            @ViewContext.RouteData.Values["action"].ToString()
        }
        catch
        {

        }

        @try
        {
            if ((ViewContext.RouteData.Values["view"]) != null)
            {
                @:/ (ViewContext.RouteData.Values["view"])
            }
        }
        catch
        {

        }

        @*@ViewContext.RouteData.GetRequiredString("action")*@
        @*@Url.RequestContext.RouteData.Values["id"]*@
        @*@Request.Url.OriginalString*@
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
