</head>
<body>
    <header>
        <nav class="navbar-musicore navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusiCore</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight: bold" asp-area="" asp-controller="Concert" asp-action="Index">MusiCore</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Concert" asp-action="Create">
                                Yeni Konser Ekle
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    @*<div class="container">
        &copy; 2020 - MusiCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>*@

    <div class="footer-copyright text-center py-3" style="margin-bottom: 54px; margin-top: -11px;">
        © 2020 - My ASP.NET Application
    </div>
</footer>

<div class="footer i-footer" style="display:table">

    <div class="i-color-black i-text-align-left i-font-weight-bold
                     i-vertical-align-middle i-display-table-cell">

        @{

            //var username = HttpContext.Current.User.Identity.Name;

            var username = Context.User.Identity.Name;


            ViewBag.bagForUserName = "";
            var userId = User.FindFirstValue(ClaimTypes.NameIdentifier); // will give the user's userId

            if (userId == null)
            {
                ViewBag.bagForUserName = "Kullanıcı Giriş Yapmadı ";
                ViewBag.userId = userId;

            }

            else
            {
                //var user = _context.Users.Single(u => u.Id == userId);
                //User.FindFirst(ClaimTypes.NameIdentifier).Value;

                ViewBag.bagForUserName = username;
                //ViewBag.bagForUserMail = "(" + user.Email + ")";
            }
        }
        &nbsp;

        @ViewBag.bagForUserName &nbsp; @ViewBag.bagForUserMail

        &nbsp;
        <div class="i-color-black i-text-align-left i-font-weight-bold
                     i-vertical-align-bottom i-display-table-cell">
            @{
                ViewBag.bagForUserId = "";
                if (userId == null)
                {
                    ViewBag.bagForUserName = "Kullanıcı Giriş Yapmadı";

                }

                else
                {
