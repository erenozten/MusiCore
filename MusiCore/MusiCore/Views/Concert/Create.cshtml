@model MusiCore.ViewModels.ConcertFormViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Create a Concert</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Venue" class="control-label textRenk"></label>
                <input asp-for="Venue" class="form-control" />
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label textRenk"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label textRenk"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="Genre" class="control-label textRenk"></label>
                <select asp-for="Genre" class="form-control" asp-items="ViewBag.GenreBag"></select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Genre" class="control-label textRenk"></label>
                
                <select asp-for="Genre" class="form-control"
                        asp-items="@(new SelectList(Model.Genres,"Id","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
