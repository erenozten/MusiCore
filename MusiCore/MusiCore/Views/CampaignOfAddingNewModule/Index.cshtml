@model IEnumerable<MusiCore.TextModels.CampaignOfAddingNewModule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("PartialViews/_PartialViewForCreateTextTop")

<style>
    .close {
        position: absolute;
        /* left: 408px; */
        left: 398px;
        width: 32px;
        height: 32px;
        opacity: 1;
        color: red;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Modüller
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.IsDone)
                {
                    <td>
                        <div class="check"></div>
                    </td>
                }
                else
                {
                    <td>
                        <div class="close"></div>
                    </td>
                }
                <td>
                    @if (item.IsDone)
                    {
                        @Html.DisplayFor(modelItem => item.TextTurkish) <span style="font-style: italic; color: #00bfff">@item.GetMonth </span> <a asp-action="Details" asp-route-id="@item.Id">Görüntüle</a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TextTurkish) <span style="font-style: italic; color: #fb7575"> @item.GetMonth </span> <a asp-action="Details" asp-route-id="@item.Id">Görüntüle</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Yeni Modül Görevi Ekle</a>
</p>