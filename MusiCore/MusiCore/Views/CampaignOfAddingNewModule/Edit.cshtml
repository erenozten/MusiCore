@model MusiCore.TextModels.CampaignOfAddingNewModule

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@Html.Partial("PartialViews/_PartialViewForCreateTextTop")*@
@await Html.PartialAsync("PartialViews/_PartialViewForCreateTextTop")

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TextTurkish" class="control-label"></label>
                @Html.TextAreaFor(model => model.TextTurkish, new {@class = "form-control" })
                <span asp-validation-for="TextTurkish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextEnglish" class="control-label"></label>
                @Html.TextAreaFor(model => model.TextEnglish, new {@class = "form-control" })
                <span asp-validation-for="TextEnglish" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDone" /> @Html.DisplayNameFor(model => model.IsDone)
                </label>
            </div>
            @*@Html.Partial("PartialViews/_PartialViewForCreateTextBottom")*@
            @await Html.PartialAsync("PartialViews/_PartialViewForCreateTextBottom")
        </form>
    </div>
</div>


